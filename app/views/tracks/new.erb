<% if  @track && @track.errors.any? %>
  <div>
    <strong>Some issues with your added track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Add a new track</h1>

<form method="post" action="/tracks">
  <div>
    <label>Artist</label>
    <input type="text" name="artist" value="<%= @track && @track.artist %>">
  </div>
  <div>
    <label>Song Title:</label>
    <input type="text" name="song_title" value="<%= @track && @track.song_title %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @track && @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>

