<% if  @track && @track.errors.any? %>
  <div>
    <strong>Some issues with your added track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="page-header">
  <h1>Add a new Track <small>..your friends will like you more if you do...</small></h1>
</div>

<form class="form-horizontal" method="post" action="/tracks">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label input-lg">Artist</label>
    <div class="col-sm-10">
      <input type="text" name='artist' class="form-control input-lg" id="inputEmail3" placeholder="Artist" value="<%= @track && @track.artist %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label input-lg">Song</label>
    <div class="col-sm-10">
      <input type="text" name='song_title' class="form-control input-lg" id="inputPassword3" placeholder="Song" value="<%= @track && @track.song_title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label input-lg">URL</label>
    <div class="col-sm-10">
      <input type="text" name='url' class="form-control input-lg" id="inputPassword3" placeholder="URL" value="<%= @track && @track.url %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default btn-lg"><strong>Add</strong></button>
    </div>
  </div>
</form>

